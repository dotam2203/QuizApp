<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/quiz" />

        <TextView
            android:layout_width="232dp"
            android:layout_height="71dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:text="Welcome To The PTIT QUIZ..."
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtUserLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border_purple60"
            android:drawableStart="@drawable/ic_person_login"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/purple_300"
            android:textColorHint="@color/purple_200" />

        <EditText
            android:id="@+id/txtPassLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border_purple60"
            android:drawableStart="@drawable/ic_lock_login"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/purple_300"
            android:textColorHint="@color/purple_200" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/round_border_onclick"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>